<h1>投稿</h1>
<p><%= @post.id %></p>
<p><%= @user.family_name %><%= @user.first_name %></p>
<p><%= @post.content %></p>
<p><%= @post.place %></p>
<br><br>
<% if user_signed_in? && @post.user_id == current_user.id %>
  <a href="/posts/<%= @post.id %>/edit/" class="btn btn-primary">投稿を変更する</a>
  <a href="/posts/<%= @post.id %>" data-method="delete"  class="btn btn-danger">投稿を削除する</a>
<% end %>
<a href="/posts/" class="btn btn-info">トップに戻る</a>
